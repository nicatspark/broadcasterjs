{
  "name": "@foundit/broadcasterjs",
  "version": "1.0.3",
  "description": "A simple yet powerful pub/sub javascript event bus",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/esm/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:esm": "tsc --module es2015 --target es5 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --target es5",
    "build:types": "tsc --emitDeclarationOnly -d",
    "build": "npm run build:esm && npm run build:cjs && npm run build:types"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicatspark/broadcasterjs.git"
  },
  "keywords": [
    "pub/sub",
    "eventbus",
    "javascript"
  ],
  "author": "Nicolas Hervy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nicatspark/broadcasterjs/issues"
  },
  "homepage": "https://github.com/nicatspark/broadcasterjs#readme",
  "dependencies": {
    "typescript": "^4.5.5"
  }
}
